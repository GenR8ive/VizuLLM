{
  "name": "Modern Invoice",
  "version": "1.0.0",
  "description": "A modern, professional invoice component with gradient styling and clean layout",
  "type": "object",
  "properties": {
    "invoiceNumber": {
      "type": "string",
      "description": "Unique invoice identifier"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Invoice date"
    },
    "dueDate": {
      "type": "string",
      "format": "date",
      "description": "Payment due date"
    },
    "company": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Company name"
        },
        "address": {
          "type": "string",
          "description": "Company address"
        },
        "city": {
          "type": "string",
          "description": "Company city and postal code"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Company email"
        },
        "phone": {
          "type": "string",
          "description": "Company phone number"
        }
      },
      "required": ["name", "address", "city"]
    },
    "client": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Client name"
        },
        "address": {
          "type": "string",
          "description": "Client address"
        },
        "city": {
          "type": "string",
          "description": "Client city and postal code"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Client email"
        }
      },
      "required": ["name", "address", "city"]
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "Item description"
          },
          "quantity": {
            "type": "number",
            "description": "Item quantity"
          },
          "unit": {
            "type": "string",
            "description": "Unit of measurement"
          },
          "rate": {
            "type": "number",
            "description": "Unit rate"
          },
          "amount": {
            "type": "number",
            "description": "Total amount for this item"
          }
        },
        "required": ["description", "quantity", "rate", "amount"]
      }
    },
    "subtotal": {
      "type": "number",
      "description": "Subtotal before tax"
    },
    "tax": {
      "type": "number",
      "description": "Tax amount"
    },
    "total": {
      "type": "number",
      "description": "Total amount including tax"
    },
    "theme": {
      "type": "object",
      "properties": {
        "primaryGradient": {
          "type": "string",
          "default": "from-blue-600 to-purple-600",
          "description": "Primary gradient for header"
        },
        "currency": {
          "type": "string",
          "default": "USD",
          "description": "Currency symbol"
        },
        "taxRate": {
          "type": "number",
          "default": 0.1,
          "description": "Tax rate as decimal"
        }
      }
    }
  },
  "required": ["invoiceNumber", "date", "company", "client", "items", "total"]
} 