{
  "name": "Weekly/Monthly Program Calendar",
  "version": "1.0.0",
  "description": "A modern, printable calendar component for weekly and monthly programs with event scheduling",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Calendar title (e.g., 'Weekly Program', 'Monthly Schedule')"
    },
    "period": {
      "type": "string",
      "enum": ["weekly", "monthly"],
      "description": "Calendar type - weekly or monthly view"
    },
    "startDate": {
      "type": "string",
      "format": "date",
      "description": "Start date of the calendar period"
    },
    "endDate": {
      "type": "string",
      "format": "date",
      "description": "End date of the calendar period"
    },
    "organization": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Organization or company name"
        },
        "logo": {
          "type": "string",
          "description": "Logo URL or text"
        },
        "contact": {
          "type": "string",
          "description": "Contact information"
        }
      },
      "required": ["name"]
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique event identifier"
          },
          "title": {
            "type": "string",
            "description": "Event title"
          },
          "description": {
            "type": "string",
            "description": "Event description"
          },
          "date": {
            "type": "string",
            "format": "date",
            "description": "Event date"
          },
          "startTime": {
            "type": "string",
            "description": "Event start time (HH:MM format)"
          },
          "endTime": {
            "type": "string",
            "description": "Event end time (HH:MM format)"
          },
          "location": {
            "type": "string",
            "description": "Event location"
          },
          "category": {
            "type": "string",
            "description": "Event category (e.g., 'Meeting', 'Training', 'Workshop')"
          },
          "priority": {
            "type": "string",
            "enum": ["low", "medium", "high"],
            "description": "Event priority level"
          },
          "color": {
            "type": "string",
            "description": "Event color (hex code or Tailwind class)"
          }
        },
        "required": ["id", "title", "date"]
      }
    },
    "timeSlots": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Time slots for weekly view (e.g., ['09:00', '10:00', '11:00'])"
    },
    "weekDays": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Days of the week to display"
    },
    "theme": {
      "type": "object",
      "properties": {
        "primaryGradient": {
          "type": "string",
          "default": "from-blue-600 to-purple-600",
          "description": "Primary gradient for header"
        },
        "eventColors": {
          "type": "object",
          "properties": {
            "meeting": {
              "type": "string",
              "default": "bg-blue-100 text-blue-800",
              "description": "Meeting event color"
            },
            "training": {
              "type": "string",
              "default": "bg-green-100 text-green-800",
              "description": "Training event color"
            },
            "workshop": {
              "type": "string",
              "default": "bg-purple-100 text-purple-800",
              "description": "Workshop event color"
            },
            "default": {
              "type": "string",
              "default": "bg-gray-100 text-gray-800",
              "description": "Default event color"
            }
          }
        },
        "showTimeSlots": {
          "type": "boolean",
          "default": true,
          "description": "Show time slots in weekly view"
        },
        "showWeekends": {
          "type": "boolean",
          "default": true,
          "description": "Show weekends in calendar"
        }
      }
    }
  },
  "required": ["title", "period", "startDate", "endDate", "organization", "events"]
} 